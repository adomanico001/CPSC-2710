<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="applicationRoot" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module7.CourseScheduleApplicationController">
    <center>
        <fx:include fx:id="courseScheduleTableView" source="course-schedule-table-view.fxml" />
    </center>
    <bottom>
        <HBox prefHeight="161.0" prefWidth="496.0">
            <children>
                <fx:include fx:id="courseScheduleDetailView" source="course-schedule-detail-view.fxml" />
                <VBox>
                    <children>
                        <Button fx:id="updateButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#updateButtonAction" prefHeight="26.0" prefWidth="90.0" text="Update">
                     <VBox.margin>
                        <Insets bottom="10.0" right="2.0" top="13.0" />
                     </VBox.margin></Button>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#newButtonAction" prefWidth="90.0" text="New">
                     <VBox.margin>
                        <Insets bottom="10.0" right="2.0" />
                     </VBox.margin></Button>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#deleteButtonAction" prefWidth="90.0" text="Delete">
                     <VBox.margin>
                        <Insets bottom="10.0" right="2.0" />
                     </VBox.margin></Button>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets right="4.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>

    <top>
            <MenuBar useSystemMenuBar="true" BorderPane.alignment="CENTER">
                <menus>
                    <Menu mnemonicParsing="false" text="File">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#appearanceMenuAction" text="Appearance" />
                            <MenuItem mnemonicParsing="false" onAction="#closeMenuAction" text="Close" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Edit">
                        <items>
                            <MenuItem fx:id="updateMenuItem" mnemonicParsing="false" onAction="#updateMenuAction" text="Update">
                                <accelerator>
                                    <KeyCodeCombination alt="UP" code="U" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                </accelerator>
                            </MenuItem>
                            <MenuItem fx:id="newMenuItem" mnemonicParsing="false" onAction="#newMenuAction" text="New">
                                <accelerator>
                                    <KeyCodeCombination alt="UP" code="N" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                </accelerator>
                            </MenuItem>
                            <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" onAction="#deleteMenuAction" text="Delete">
                                <accelerator>
                                    <KeyCodeCombination alt="UP" code="D" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                </accelerator>
                            </MenuItem>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
    </top>
</BorderPane>
