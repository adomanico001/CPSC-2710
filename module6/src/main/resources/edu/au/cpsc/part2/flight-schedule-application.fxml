<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.part2.FlightScheduleApplicationController">
    <top>
        <fx:include fx:id="flightScheduleTableView" source="flight-schedule-table-view.fxml" />
    </top>
    <center>
        <fx:include fx:id="flightScheduleDetailView" source="flight-schedule-detail-view.fxml" />
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButtonAction" text="Update" />
                <Button mnemonicParsing="false" onAction="#newButtonAction" text="New" />
                <Button mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
            </buttons>
         <BorderPane.margin>
            <Insets right="4.0" />
         </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
