<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="applicationRoot" prefHeight="200.0" prefWidth="456.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.part2.FlightScheduleApplicationController">
    <top>
        <fx:include fx:id="flightScheduleTableView" source="flight-schedule-table-view.fxml" />

        <MenuBar useSystemMenuBar="true" BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#appearanceMenuAction" text="Appearance..." />
                        <MenuItem mnemonicParsing="false" onAction="#closeMenuAction" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem fx:id="updateMenuItem" mnemonicParsing="false" onAction="#updateMenuAction" text="Update">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="U" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="newMenuItem" mnemonicParsing="false" onAction="#newMenuAction" text="New">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="N" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" onAction="#deleteMenuAction" text="Delete">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="D" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <fx:include fx:id="flightScheduleDetailView" source="flight-schedule-detail-view.fxml" />
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButtonAction" text="Update" />
                <Button fx:id="newButton" mnemonicParsing="false" onAction="#newButtonAction" text="New" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Button>
            </buttons>
         <BorderPane.margin>
            <Insets right="4.0" />
         </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
