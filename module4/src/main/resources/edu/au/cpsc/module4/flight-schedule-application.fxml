<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/19.0.2" xmlns:fx="http://javafx.com/fxml" fx:controller="edu.au.cpsc.module4.FlightScheduleApplicationController">
    <top>
        <fx:include fx:id="flightScheduleTableViewController" source="flight-schedule-table-view.fxml" />
    </top>
    <center>
        <fx:include fx:id="flightScheduleDetailViewController" source="flight-schedule-detail-view.fxml" />
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButtonAction" text="Update" />
                <Button mnemonicParsing="false" onAction="#newButtonAction" text="New" />
                <Button mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete" />
            </buttons>
        </ButtonBar>
    </bottom>
</BorderPane>